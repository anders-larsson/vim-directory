filetype on
filetype plugin on
filetype indent on
set grepprg=grep\ -nH\ $
let g:text_flavor='latex'

set backspace=indent,eol,start
set nocompatible
set autoindent
set expandtab
set noerrorbells
set number
set shiftwidth=2
set ruler
set showcmd
set showmatch
set smartcase
set ts=2
set sw=2

inoremap <C-U> <C-G>u<C-U>
